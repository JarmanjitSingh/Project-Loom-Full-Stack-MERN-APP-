{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/Backend/dist/server.js", // Point to your compiled main file
        "outFiles": ["${workspaceFolder}/Backend/dist/**/*.js"], // Point to your compiled JavaScript files
        "sourceMaps": true, // Ensure source maps are used
        "preLaunchTask": "tsc: build - tsconfig.json" 
      }
    ]
  }